description  "evercam_media"
start on filesystem or runlevel [2345]
stop on runlevel [!2345]

respawn
chdir /
setuid root
setgid root
console log

env HOME=/home/{{user_name}}
env {{env_vars.snap_iv}}
env {{env_vars.snap_key}}
env {{env_vars.aws_access_key}}
env {{env_vars.aws_secret_key}}
env {{env_vars.evercam_api}}

exec watch -n1 '/home/{{user_name}}/evercam_media/bin/media start'
